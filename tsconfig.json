{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "types": [
      "node",
      "jest"
    ],
    "declaration": true,
    "paths": {
      "#*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "files": true,
  },
  "exclude": [
    "dist/*",
    "node_modules/*"
  ]
}
